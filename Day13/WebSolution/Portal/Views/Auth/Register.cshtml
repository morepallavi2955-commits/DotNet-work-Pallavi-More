
<!-- Custoemr Registration Form ---->

<h2> New Registration</h2>
<hr/>
<table>
    <form method="POST" action="/auth/register">
    <tr></tr>
            <td>Full Name</td>
            <td><input type="text" required name="name" id="name"/></td>
    </tr>
        <tr>
            <td>Email Address</td>
            <td><input type="email" required name="email" id="email"/></td>
    </tr>
          <tr></tr>
            <td>Password</td>
            <td><input type="password" required name="password" id="password"/></td>
    </tr>
    
    <tr>
            <td></td>
            <td><button type="submit" id="btnRegister">Register</button></td>
    </tr>
    </form>
</table>

@if (ViewBag.ErrorMessage != null)
{
    <div style="color:red;">@ViewBag.ErrorMessage</div>
}